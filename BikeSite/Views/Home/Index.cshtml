@{
    ViewData["Title"] = "Home Page";
}

<div class="content content--map">
    <div class="map" id="mapid">
    </div>
    <div class="panel">
        <ul class="tab">
            <li class="tab__li tab__active"><a class="tab__header" href="#tab1">Szukaj</a></li>
            <li class="tab__li"><a class="tab__header" href="#tab2">Dodaj</a></li>
            <li class="tab__li"><a class="tab__header" href="#tab3">Trasa</a></li>
        </ul>
        <div class="tab__panel tab__active" id="tab1">
            <div class="search">
                <h3 class="panel__header">Szukaj trasy</h3>
                <form>
                    <label class="search__header">Długość: </label></br>
                    <div class="search__options">
                        <button class="panel__button" id="len" value="length-1">
                            <30km
                        </button> <button class="panel__button" id="len" value="length-2">
                            31-50 km
                        </button>
                        <button class="panel__button" id="len" value="length-3">51-80 km</button>
                        <button class="panel__button" id="len" value="length-4">81-100 km</button>
                        <button class="panel__button" id="len" value="length-5">>100 km</button></br>
                    </div>
                    <label class="search__header">Poziom trudności: </label></br>
                    <div class="search__options">
                        <button class="panel__button">Łatwa</button>
                        <button class="panel__button">Średnia</button>
                        <button class="panel__button">Trudna</button></br>
                    </div>
                    <label class="search__header">Nawierzchnia: </label></br>
                    <div class="search__options">
                        <button class="panel__button">Asfalt</button>
                        <button class="panel__button">Leśne ścieżki</button>
                        <button class="panel__button">Mieszana</button>
                    </div>
                    <div class="search_options search__options--submit">
                        <img class="search__img" src="img/compass.png">
                        <button class="panel__button panel__button--submit">Szukaj</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="tab__panel" id="tab2">
            <div class="search">
                <h3 class="panel__header">Dodaj trasę</h3>

                <div class="draw__start">
                    <button class="panel__button panel__button--draw">Rysuj</button>
                    <h4 class="panel__length">Długość trasy: </h4>
                </div>
                <form id="form_route">
                    <div class="draw__form">
                        <label class="draw__label">Nazwa</label>
                        <input class="draw__input" id="route_name" name="name">
                    </div>
                    <div class="draw__form">
                        <label class="draw__label">Opis</label>
                        <textarea class="draw__text" id="description" name="description" rows="5" , columns="80"></textarea>
                    </div>
                    <div class="draw__submit">
                        <input type="checkbox" name="valid_ninja"> Dodaj trasę do ulubionych
                        <button type="submit" class="panel__button panel__button--save">Zapisz</button>
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <h4 style="color: red">Aby zapisać trasę, musisz być zalogowany.</h4>
                        }
                    </div>
                </form>
            </div>
        </div>
        <div class="tab__panel" id="tab3">
            <div class="search">
                <h3 class="panel__header">Szczegóły trasy</h3>
                <div>
                    <h3 class="search__header">Długość trasy: </h3>
                    <h3 class="search__header">Użytkownik: </h3>
                    <h3 class="search__header">Przewyższenia: </h3>
                    <h3 class="search__header">Typy nawierzchni: </h3>
                    <h3 class="search__header">Opis:</h3>
                    <h3 class="search__header">Komentarze:</h3>
                </div>

            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="~/js/map.js"></script>
<script type="text/javascript" src="~/js/panel.js"></script>
<script type="text/javascript" src="~/js/drawing.js"></script>