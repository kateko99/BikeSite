@{
    var returnUrl = ViewData["ReturnUrl"] as string;
    var error = TempData["Error"] as string;
}

@if (!string.IsNullOrEmpty(error))
{
    <h1 class="alert-danger" style="padding:20px">@error</h1>
}

<div class="content">
    <div class="content__log">
        <h2 class="header">Logowanie</h2>
        <form class="form">
            <label>Nazwa użytkownika</label>
            <input class="form__input" name="username" type="text" required autofocus>
            <label>Hasło</label>
            <input class="form__input" name="password" type="password" required>
            <div class="form__google" onclick="google_func('@returnUrl')">
                <p>Zaloguj z</p>
                <img class="form__icon" src="img/google.png">
            </div>
            <button type="submit" class="button button--login">Zaloguj</button>
        </form>
    </div>
</div>
<script src="~/js/login.js"></script>

